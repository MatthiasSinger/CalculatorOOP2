<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" prefHeight="300" prefWidth="300" spacing="1" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="calculator.CalculatorController">
  
  
    <StackPane alignment="CENTER">
        <Rectangle fill="TRANSPARENT" height="51.0" stroke="GRAY" width="253.0" />
        <Text fx:id="output" />
    </StackPane>
    
    
    <HBox alignment="CENTER" spacing="1">
        <Button onAction="#processNumpad" prefWidth="50" text="7" />
        <Button onAction="#processNumpad" prefWidth="50" text="8" />
        <Button onAction="#processNumpad" prefWidth="50" text="9" />
        <Button onAction="#processNumpad" prefWidth="50" text="/" />
      <Button mnemonicParsing="false" onAction="#deleteAll" prefHeight="25.0" prefWidth="51.0" text="C" />
    </HBox>
    
    <HBox alignment="CENTER" spacing="1">
        <Button onAction="#processNumpad" prefWidth="50" text="4" />
        <Button onAction="#processNumpad" prefWidth="50" text="5" />
        <Button onAction="#processNumpad" prefWidth="50" text="6" />
        <Button onAction="#processNumpad" prefWidth="50" text="*" />
      <Button mnemonicParsing="false" onAction="#processNumpad" prefWidth="50.0" text="(" />
    </HBox>
    
    <HBox alignment="CENTER" spacing="1">
        <Button onAction="#processNumpad" prefWidth="50" text="1" />
        <Button onAction="#processNumpad" prefWidth="50" text="2" />
        <Button onAction="#processNumpad" prefWidth="50" text="3" />
        <Button onAction="#processNumpad" prefWidth="50" text="-" />
      <Button mnemonicParsing="false" onAction="#processNumpad" prefWidth="50.0" text=")" />
    </HBox>
    
    <HBox alignment="CENTER" spacing="1">
        <Button onAction="#processNumpad" prefWidth="50" text="0" />
        <Button onAction="#processNumpad" prefWidth="50" text="." />
        <Button onAction="#processEqual" prefWidth="50" text="=" />
        <Button onAction="#processNumpad" prefWidth="50" text="+" />
      <Button mnemonicParsing="false" onAction="#processNumpad" prefWidth="50.0" text="^" />
    </HBox>
</VBox>
